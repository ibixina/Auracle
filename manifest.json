
{
  "manifest_version": 3,
  "name": "Text Selector Extension",
  "version": "1.0",
  "description": "Triggers a function when text is selected.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
